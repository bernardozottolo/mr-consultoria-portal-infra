your-domain.com {
    # API - DEVE VIR ANTES DO FALLBACK /*
    handle /api/* {
        reverse_proxy backend:5000 {
            header_up Host {host}
            header_up X-Real-IP {remote}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    # Health check específico (opcional, já coberto por /api/*)
    handle /api/health {
        reverse_proxy backend:5000
    }

    # Frontend - Fallback para tudo que não é /api/*
    handle /* {
        reverse_proxy frontend:80
    }

    # Logs
    log {
        output file /var/log/caddy/access.log
    }
}
